pipeline {
  agent any
  stages {
    stage('Setup Python') {
      steps {
        sh 'python3 -m venv .venv && . .venv/bin/activate && pip install -r requirements.txt'
      }
    }
    stage('Train Sample Model') {
      steps {
        sh '. .venv/bin/activate && python scripts/train_sample_model.py'
      }
    }
    stage('Validate Model') {
      steps {
        sh '. .venv/bin/activate && python src/runner.py --model-path models/iris_logreg.pkl --data-path data/iris.csv --suite f1,latency_p95,pii,jailbreak --policy policy.yaml'
      }
    }
  }
  post {
    always {
      archiveArtifacts artifacts: 'mlruns/**/*', allowEmptyArchive: true
    }
  }
}
